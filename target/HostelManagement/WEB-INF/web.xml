<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>HostelManagement</display-name>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>org.apache.catalina.filters.SetCharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
        <init-param>
            <param-name>ignore</param-name>
            <param-value>false</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>AdminLoginServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.AdminLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminLoginServlet</servlet-name>
        <url-pattern>/admin/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentLoginServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.StudentLoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentLoginServlet</servlet-name>
        <url-pattern>/student/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AdminPanelServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.AdminPanelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AdminPanelServlet</servlet-name>
        <url-pattern>/admin/panel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>StudentPanelServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.StudentPanelServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>StudentPanelServlet</servlet-name>
        <url-pattern>/student/panel</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RoomAssignmentServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.RoomAssignmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RoomAssignmentServlet</servlet-name>
        <url-pattern>/admin/assign-room</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>PaymentUpdateServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.PaymentUpdateServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PaymentUpdateServlet</servlet-name>
        <url-pattern>/admin/update-payment</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.hostelmgmt.servlet.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
